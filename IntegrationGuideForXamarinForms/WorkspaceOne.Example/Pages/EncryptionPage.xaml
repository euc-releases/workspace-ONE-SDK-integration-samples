<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WorkspaceOne.Example.Pages.EncryptionPage" Title="Encryption">
    <!--<ScrollView>-->
    <StackLayout Margin="10">
        <Label Text="Encryption" FontSize="Large" />
        <Entry x:Name="plain_text" Placeholder="Plain Text" />
        <Entry x:Name="encrypted_text" Placeholder="Encrypted Text" IsReadOnly="True" />
        <Button x:Name="copy_button" Text="Copy" />
        <Label Text="Decryption" FontSize="Large" />
        <Entry x:Name="text_to_decrypt" Placeholder="Encrypted Text" />
        <Entry x:Name="decrypted_text" Placeholder="Plain Text" IsReadOnly="True" />
    </StackLayout>
    <!--</ScrollView>-->
</ContentPage>
