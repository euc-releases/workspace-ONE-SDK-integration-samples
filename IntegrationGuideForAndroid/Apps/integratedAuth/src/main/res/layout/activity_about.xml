<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutActivity"
    >
    <ImageView
        android:id="@+id/applicationLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_logo_content_description"
        android:src="@mipmap/ic_roundicon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20sp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".25"
        />
<!--    app:layout_constraintBottom_toBottomOf="parent"-->
<!--    app:layout_constraintVertical_bias="0.2"-->
    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/applicationLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20sp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/guideSetting"
        app:layout_constraintBaseline_toBaselineOf="@id/moduleName"
        android:text="@string/module_label"
        android:labelFor="@+id/moduleName"
        />
    <EditText
        android:id="@+id/moduleName"
        tools:ignore="TextFields"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideSetting"
        android:importantForAutofill="no"
        android:inputType="none"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/guideSetting"
        app:layout_constraintBaseline_toBaselineOf="@id/darkMode"
        android:text="@string/dark_mode_label"
        android:labelFor="@+id/darkMode"
        />
    <EditText
        android:id="@+id/darkMode"
        tools:ignore="TextFields"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:layout_constraintLeft_toLeftOf="@id/guideSetting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moduleName"
        android:importantForAutofill="no"
        android:inputType="none"
        />
    <TextView
        android:id="@+id/smallPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/about_small_print"
        />

</androidx.constraintlayout.widget.ConstraintLayout>