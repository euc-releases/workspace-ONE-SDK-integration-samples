<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DLPEditTextActivity"
    >
    <ScrollView
        android:id="@+id/controlsHolder"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5sp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/uiHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/dlpExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dlp_explanation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/policyHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/policy_heading"
                android:layout_marginTop="10dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                app:layout_constraintTop_toBottomOf="@+id/dlpExplanation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidePolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/guidePolicy"
                app:layout_constraintBaseline_toBaselineOf="@id/policyOutbound"
                android:text="@string/copy_paste_outbound_protection"
                android:labelFor="@+id/policyOutbound"
                />
            <EditText
                android:id="@+id/policyOutbound"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:layout_constraintLeft_toLeftOf="@id/guidePolicy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/policyHeading"
                android:importantForAutofill="no"
                android:inputType="none"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/guidePolicy"
                app:layout_constraintBaseline_toBaselineOf="@id/policyInbound"
                android:text="@string/copy_paste_inbound_protection"
                android:labelFor="@+id/policyInbound"
                />
            <EditText
                android:id="@+id/policyInbound"
                android:layout_width="0dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                app:layout_constraintLeft_toLeftOf="@id/guidePolicy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/policyOutbound"
                android:importantForAutofill="no"
                android:inputType="none"
                />
            <TextView
                android:id="@+id/controlsHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demonstration_heading"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/policyInbound"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <EditText
                android:id="@+id/webViewAddressBar"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:inputType="textUri"
                android:imeOptions="actionGo"
                android:importantForAutofill="no"
                app:layout_constraintTop_toBottomOf="@+id/controlsHeading"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/webViewGoButton"
                />
            <android.widget.Button
                android:id="@+id/webViewGoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/web_view_button_label"
                app:layout_constraintTop_toBottomOf="@+id/controlsHeading"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/ws1WebViewLabel"
                android:text="@string/ws1_webview"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/webViewAddressBar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                />
            <ProgressBar
                android:id="@+id/ws1WebViewProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="75"
                app:layout_constraintTop_toBottomOf="@+id/ws1WebViewLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                />
            <!--
            TOTH the layout_constrainedHeight attribute, as distinct from
            layout_constraintHeight and layout_constraintHeight_max.
            https://stackoverflow.com/a/48960323/7657675

            The two LinearLayout items get a layout_constraintHeight_max set
            in the code. Their maximum height constraint is based on the screen
            size, which isn't known until run time. The web views are wrapped in
            LinearLayout items. The web views seemed to take the maximum
            constrained height to be their actual height, hence they're wrapped.

            The LinearLayout paddingStart creates an area outside each web view
            that can be dragged to scroll the whole screen. Dragging inside the
            web view will scroll the web content.
            -->
            <LinearLayout
                android:id="@+id/ws1WebViewHolder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/ws1WebViewProgress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constrainedHeight="true"
                app:layout_constraintHeight="wrap_content"
                android:paddingStart="30sp"
                tools:ignore="RtlSymmetry"
                >
                <com.airwatch.ui.widget.CopyEnabledWebView
                    android:id="@+id/ws1WebView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/plainWebViewLabel"
                android:text="@string/plain_webview"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ws1WebViewHolder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                />
            <ProgressBar
                android:id="@+id/plainWebViewProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="75"
                app:layout_constraintTop_toBottomOf="@+id/plainWebViewLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                />
            <LinearLayout
                android:id="@+id/plainWebViewHolder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/plainWebViewProgress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constrainedHeight="true"
                app:layout_constraintHeight="wrap_content"
                android:paddingStart="30sp"
                tools:ignore="RtlSymmetry"
                >
                <android.webkit.WebView
                    android:id="@+id/plainWebView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>